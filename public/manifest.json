{
  "manifest_version": 3,
  "name": "CloudWatch Metrics Gpt",
  "version": "1.0.0",
  "description": "Chrome extension that generates CloudWatch Metrics Insights queries from ChatGPT prompts",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "web_accessible_resources": [
      {
          "resources": [
            "editor.js"
          ],
          "matches": [
            "<all_urls>"
          ]
      }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.console.aws.amazon.com/cloudwatch/home*"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_title": "CW Metrics Insight GPT",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.console.aws.amazon.com/cloudwatch/home*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
